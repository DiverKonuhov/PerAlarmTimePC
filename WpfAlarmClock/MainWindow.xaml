<Window x:Class="WpfAlarmClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Будильник" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Отображение текущего времени -->
            <TextBlock x:Name="CurrentTimeText" FontSize="24" TextAlignment="Center" Margin="0,0,0,20"/>

            <!-- Выбор времени для будильника -->
            <TextBlock Text="Установите время будильника:" Margin="0,10"/>
            <TextBox x:Name="AlarmTimeInput" Width="100" TextAlignment="Center" Margin="0,5"/>
            <Button x:Name="SetAlarmButton" Content="Установить будильник" Click="SetAlarmButton_Click" Margin="0,10"/>

            <!-- Состояние будильника -->
            <TextBlock x:Name="AlarmStatusText" FontSize="18" Foreground="Red" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>